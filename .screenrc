startup_message off

# off with the Wuff Wuff
vbell off

term xterm-256color

# tell xterm to use the normal screen buffer
# (which has scrollback), not the alternate screen buffer.
termcapinfo xterm|xterms|xs|rxvt ti@:te@

# large history
defscrollback 100000

# useful to undo splits
bind X remove

# emacsclient on window 0, and title the window "emacs"
screen -t emacs emacsclient -t
